<div class="mt-4">
    <h3>Edit Course</h3>
    <form class="mt-4" method="POST" action="/courses/update/{{course._id}}?_method=PUT"> 
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input name="name" value="{{course.name}}" type="text" class="form-control" id="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" type="text" class="form-control" id="Description">{{course.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video Id</label>
            <input name="videoId" value="{{course.videoId}}" type="text" class="form-control" id="videoId">
        </div>
       
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

