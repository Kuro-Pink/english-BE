<div class="mt-4">
    <h3>Thêm câu hỏi</h3>
    <form method="POST" action="/questions/store">
        <div class="mb-3">
            <label for="content" class="form-label">Nội dung:</label>
            <input name="content" type="text" class="form-control" id="content">
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Câu hỏi:</label>
            <input name="title" type="text" class="form-control" id="title">
        </div>
        <div class="mb-3">
            <label for="answer" class="form-label">Đáp án:</label>
            <input name="answer" type="text" class="form-control" id="answer">
        </div>
       
        <button type="submit" class="btn btn-primary">Thêm câu hỏi</button>
    </form>
</div>