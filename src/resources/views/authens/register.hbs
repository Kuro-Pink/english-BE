<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="main">
      <form
        method="POST"
        action="/authens/store"
        class="form"
        id="registerForm"
      >
        <h3 class="heading">Đăng ký!</h3>
        <div class="spacer"></div>
        <div class="form-group">
          <label for="code" class="form-label">Mã sinh viên</label>
          <input
            id="code"
            name="code"
            rules="required"
            type="text"
            placeholder="VD: 22111061561"
            class="form-control"
          />
          <span class="form-message"></span>
        </div>

        <div class="form-group">
          <label for="username" class="form-label">Họ và tên</label>
          <input
            id="username"
            name="username"
            rules="required"
            type="text"
            placeholder="VD: Hong Hieu"
            class="form-control"
          />
          <span class="form-message"></span>
        </div>

        <div class="form-group">
          <label for="email" class="form-label">Email</label>
          <input
            id="email"
            name="email"
            rules="required|email"
            type="text"
            placeholder="VD: email@domain.com"
            class="form-control"
          />
          <span class="form-message"></span>
        </div>

        <div class="form-group">
          <label for="password" class="form-label">Mật khẩu</label>
          <input
            id="password"
            name="password"
            rules="required|min:6"
            type="password"
            placeholder="Nhập mật khẩu"
            class="form-control"
          />
          <span class="form-message"></span>
        </div>

        <div class="form-group">
          <label for="password_confirmation" class="form-label">Nhập lại mật
            khẩu</label>
          <input
            id="password_confirmation"
            name="password_confirmation"
            rules="required|confirm"
            placeholder="Nhập lại mật khẩu"
            type="password"
            class="form-control"
          />
          <span class="form-message"></span>
        </div>

        <div class="form-group">
          <label for="role" class="form-label">Phân quyền</label>
          <input
            id="role"
            name="role"
            rules="required|confirm"
            placeholder="Nhập lại mật khẩu"
            type="text"
            class="form-control"
          />
          <span class="form-message"></span>
          <a class="form-bonus" href="/authens/signup">
            Đăng nhập.
          </a>
        </div>

        <button class="form-submit">Đăng ký!</button>
      </form>
    </div>

    <script src="/js/validator.js"></script>
    <script>
      var formRegister = new Validator('#registerForm'); formRegister.onSubmit =
      function(formData){ console.log(formData) }

    </script>
  </body>
</html>